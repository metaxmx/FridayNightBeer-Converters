<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss} [%-5level] %logger{36} : %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="reactivemongo.core" level="WARN" additivity="false">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="dbconverter" level="DEBUG" additivity="false">
			<AppenderRef ref="Console"/>
		</Logger>
		<Root level="INFO">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>